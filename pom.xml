                <artifactId>anyconfig-core</artifactId>
                <version>${anyconfig-core.version}</version>
            </dependency>
            <dependency>
                <groupId>anyconfig</groupId>
                <artifactId>anyconfig-server</artifactId>
                <version>${anyconfig-server.version}</version>
